<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Edit Activity -->
    <!-- Labels Text View style -->
    <style name="InputTitleTextViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Edit Text View style -->
    <style name="EditTextStyle">
        <item name="android:textColorHighlight">@color/colorPrimaryDark</item>
    </style>

    <!-- Currency Text Style -->
    <style name="CurrencyTextViewStyle">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/activity_editor_layout_padding</item>
    </style>

    <!-- Catalog Activity ListView item layout -->
    <style name="ProductNameView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingBottom">@dimen/list_item_view_padding</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="QuantityTextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:padding">@dimen/list_item_view_padding</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CategoryTextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:padding">@dimen/list_item_view_padding</item>
    </style>

    <style name="PriceTextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/list_item_view_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ListItemButtonStyle">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Detail Activity styles -->
    <style name="DetailProductNameView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/activity_detail_layout_padding</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DetailCategoryView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/activity_detail_layout_padding</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DetailLabelsStyle">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/activity_detail_layout_padding</item>
    </style>

    <style name="DetailInfoViewStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:padding">@dimen/activity_detail_layout_padding</item>
    </style>
</resources>
